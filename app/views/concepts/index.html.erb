
<div class="concepts-list-header">Concepts</div>
 <center>
 <div class="concepts">
  <% @concepts.each do |concept| %>
    <div class="concept" id="<%= concept.id %>">
      <div class="title">
        <%= concept.title %>
      </div>
      <div class="description">
        <%= concept.description.length > 160 ? concept.description[0...160] + "..." : concept.description %>
      </div>
     <!-- <%= link_to 'delete', concept,
              method: :delete,
              data: { confirm: 'Are you sure?' } %>-->
   </div>
  <% end %>
  </div>
  </center>
